<Window x:Class="QuestionProjectOffice.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:QuestionProjectOffice.ViewModels.Windows"
        mc:Ignorable="d"
        Title="QuestionProjectOffice" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" MinHeight="450" MinWidth="800">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        
        <!--Категории вопросов-->
        <Grid Grid.Column="0" 
              Margin="10 5 5 10">

            <GroupBox Header="Категории вопросов"
                      FontSize="16">

            </GroupBox>
        </Grid>
        
        <!--Вопросы и ответы-->
        <Grid Grid.Column="1"
              Margin="5 5 10 10">

            <GroupBox Header="Вопросы и ответы"
                      FontSize="16">

            </GroupBox>
        </Grid>
    </Grid>
</Window>
